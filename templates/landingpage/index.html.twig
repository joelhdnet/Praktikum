{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style.css') }}">
{% endblock %}

{% block javascripts %}
    {{ block('javascripts', 'components/navigation/navigation.html.twig') }}
    {{ block('javascripts', 'components/contact/contact_form.html.twig') }}
    {{ block('javascripts', 'components/expertise/experties.html.twig') }}
{% endblock %}

{% block style %}
    <style>
        #content {
            margin-left: 336px;
            width: calc(100% - 336px);
        }

    </style>

    {{ block('style', 'components/navigation/navigation.html.twig') }}
    {{ block('style', 'components/home/home.html.twig') }}
    {{ block('style', 'components/hobby/hobby.html.twig') }}
    {{ block('style', 'components/experience/experience.html.twig') }}
    {{ block('style', 'components/career/career.html.twig') }}
    {{ block('style', 'components/expertise/experties.html.twig') }}
    {{ block('style', 'components/contact/contact_form.html.twig') }}
{% endblock %}

{% block body %}
    {{ block('body', 'components/navigation/navigation.html.twig') }}
    <div id="content">
        {{ block('body', 'components/home/home.html.twig') }}
        {{ block('body', 'components/hobby/hobby.html.twig') }}
        {{ block('body', 'components/experience/experience.html.twig') }}
        {{ block('body', 'components/career/career.html.twig') }}
        {{ block('body', 'components/expertise/experties.html.twig') }}

        {% if form is not null %}
            {{ block('body', 'components/contact/contact_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
