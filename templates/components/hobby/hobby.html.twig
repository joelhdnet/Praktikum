{% block style %}
    <style>
        .hobby {
         background:#101034;
         padding: 80px;
        }

        .hobby-element{
         color:#fff;
          display: flex;
            gap: 32px;

        }
        .hobby-cards{
         grid-gap: 32px;
         display: grid;
         grid-template-columns: repeat(2, 1fr)
        }

        .hobby-text {
          color:#fff;
          

        }

        

        @media screen and (max-width: 1020px) {
            .hobby-element {
                display: flex;
                flex-direction: column;


            }
        }

        @media screen and (max-width: 650px){
            .hobby {
            min-height: max-content !important;
            padding: 16px;
            }
            .hobby-cards {
             grid-template-columns: repeat(1, 100px );
            }

            .hobby-text {
            padding: 0 16px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {% set hobbies = [
        {'headline': 'kickboxen',
